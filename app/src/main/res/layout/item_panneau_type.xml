<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView_item"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_margin="@dimen/padding_size_in_activity"
        android:background="@drawable/background_rounded_white"
        android:elevation="@dimen/padd"
        app:srcCompat="@drawable/ic_splash_screen" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_titre_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="@dimen/padd"
            android:fontFamily="@font/source_sans_pro_bold"
            android:text="Type De Panneau"
            android:textColor="@color/bluesecond_cobaltturquoise"
            android:textSize="@dimen/title_size" />

        <TextView
            android:id="@+id/textView_description_item"
            style="@style/textMidTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingBottom="8dp"
            android:text="@string/lorem"
            android:textColor="@color/bluedark_gunmetal" />
    </LinearLayout>

</LinearLayout>