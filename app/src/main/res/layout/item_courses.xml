<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageView_item"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_margin="@dimen/padd_mid"
        android:background="@drawable/background_rounded_white"
        android:elevation="@dimen/elevation"
        android:padding="@dimen/padding_size_in_activity"
        app:srcCompat="@drawable/ic_launcher" />


    <TextView
        android:id="@+id/textView_titre_item"
        style="@style/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/app_courses_item"
        android:textColor="@color/red_fireopal" />

    <!--TextView
        android:id="@+id/textView_description_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:ignore="" /-->

</LinearLayout>